<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <!--Logo以及版本信息-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="14dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@id/iv_logo"
                android:text="吾知"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_appname"
                android:layout_below="@+id/tv_appname"
                android:text="当前版本: 0.1.0"
                android:textColor="@android:color/darker_gray"
                android:textSize="23sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--一段简要的文字介绍-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="汇集知乎精华,看你所想.\n闲时来看看,找到不一样的精彩!\n \n鸣谢\n本应用所有内容均来自知乎网,API来自知友@苏莉安的看知乎(http://www.kanzhihu.com),界面参考了看知乎APP,此应用图标来源于IconFont,在此一并表示感谢.\n\n最后,感谢开源世界 :-)"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

    <!--分享,反馈 - 两个按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_dark"
            android:text="分享"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/holo_blue_dark"
            android:text="反馈"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <!--关于作者,开源许可-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_opensourcelicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector_tv_bg"
            android:clickable="true"
            android:padding="8dp"
            android:text="开源许可"
            android:textColor="#1976D2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/tv_opensourcelicense"
            android:background="@drawable/selector_tv_bg"
            android:clickable="true"
            android:padding="8dp"
            android:text="关于作者"
            android:textColor="#1976D2"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>
