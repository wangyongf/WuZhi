<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yongf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.astuetz.PagerSlidingTabStripExtends
        android:id="@+id/pagertab"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        yongf:pstsIndicatorColor="@android:color/holo_blue_dark"
        yongf:pstsIndicatorHeight="3dp"
        yongf:pstsSelectedTabTextColor="@android:color/holo_blue_dark"
        yongf:pstsSelectedTabTextSize="18sp"
        yongf:pstsShouldExpand="true"
        yongf:pstsTabTextColor="@color/tab_text_normal"
        yongf:pstsTabTextSize="16sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
